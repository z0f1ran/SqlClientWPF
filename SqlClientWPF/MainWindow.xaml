<Window x:Class="SqlClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlClientWPF"
        mc:Ignorable="d"
        Title="SqlClientWPF" Height="438" Width="500" ResizeMode="NoResize" FontSize="48" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <Button x:Name="sqlClientMode_Btn" Height="100" Content="Sql Client" Click="OpenClient"/>
            <Button x:Name="tableSqlMode_Btn" Height="100" Content="Table Sql" Click="tableSqlMode_Btn_Click"/>
            <Button x:Name="workWithDataMode_Btn" Height="100" Content="Work with data" Click="workWithDataMode_Btn_Click"/>
            <Button x:Name="exit_Btn" Height="100" Content="Close" Click="exit_Btn_Click"/>
        </StackPanel>
    </Grid>
</Window>
